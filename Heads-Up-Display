#!/bin/sh

id=$(xdotool search --class Heads-Up-Display);
if [ -z "$id" ]; then
        st -c Heads-Up-Display -e tmux attach -t HUD || tmux new -s HUD;
else
        if [ ! -f /tmp/hide_hud ]; then
                touch /tmp/hide_hud && xdo hide "$id"
        elif [ -f /tmp/hide_hud ]; then
                rm /tmp/hide_hud && xdo show "$id"
        fi
fi

